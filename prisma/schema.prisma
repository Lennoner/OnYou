generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth Models
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // Custom Fields
  bio           String?
  onboardingCompleted Boolean @default(false)
  createdAt     DateTime  @default(now())

  // App Data Relations
  surveys       SurveyResponse[]
  sentLetters   Letter[] @relation("SentLetters")
  receivedLetters Letter[] @relation("ReceivedLetters")
  
  // Friends Graph (ManyToMany with Metadata via FriendConnection)
  friends       FriendConnection[] @relation("UserFriends")
  friendOf      FriendConnection[] @relation("FriendOfUser")
  
  peerFeedbacks PeerFeedback[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// App Models

model FriendConnection {
  id        String   @id @default(cuid())
  userId    String
  friendId  String
  relation  String?  // e.g., "High School Friend"
  tags      String?  // JSON string e.g. ["funny", "smart"]
  closeness Int      @default(0) // 0-100
  createdAt DateTime @default(now())
  
  user      User     @relation("UserFriends", fields: [userId], references: [id], onDelete: Cascade)
  friend    User     @relation("FriendOfUser", fields: [friendId], references: [id], onDelete: Cascade)
  
  @@unique([userId, friendId])
}

model SurveyResponse {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Radar data stored as JSON
  // e.g. { "resilience": 4, "passion": 5, ... }
  radarData String
  
  // Raw answers stored as JSON
  answers   String? @default("{}")
  
  createdAt DateTime @default(now())
}

model Letter {
  id        String   @id @default(cuid())
  senderId  String
  receiverId String? // Can be null if sending to non-user (by email/link)
  
  content   String
  template  String? // "thankyou", "cheerup", etc.
  isRead    Boolean  @default(false)
  
  sender    User     @relation("SentLetters", fields: [senderId], references: [id], onDelete: Cascade)
  receiver  User?    @relation("ReceivedLetters", fields: [receiverId], references: [id])
  
  createdAt DateTime @default(now())
}

model Invite {
  id        String   @id @default(cuid())
  code      String   @unique
  creatorId String
  
  usedCount Int      @default(0)
  maxUses   Int      @default(100)
  expiresAt DateTime?
  
  createdAt DateTime @default(now())
}

model PeerFeedback {
  id             String   @id @default(cuid())
  userId         String   // The user receiving feedback
  respondentName String
  
  // Storing scores e.g. { "resilience": 4, "pride": 5 }
  scores         String   
  
  // Storing text answers e.g. { "q1": "Great leader...", "q2": "..." }
  answers        String   
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
